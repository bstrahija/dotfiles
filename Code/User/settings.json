{
  "workbench.colorTheme": "Everforest Dark",
  "workbench.iconTheme": "catppuccin-mocha",
  "workbench.fontAliasing": "auto",
  "editor.minimap.enabled": false,
  "editor.fontFamily": "Dank Mono, JetBrains Mono, Fira Code, Monaspace Neon Medium, Menlo, Cascadia Code, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": false, // "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'",
  "editor.fontSize": 15,
  "editor.lineHeight": 38,
  "workbench.productIconTheme": "fluent-icons",
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "workbench.tree.indent": 18,

  "files.exclude": {
    "**/.idea": true
  },

  "files.autoSave": "onFocusChange",
  "files.autoSaveDelay": 300,
  "editor.rulers": [160],
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "search.mode": "reuseEditor",
  "search.exclude": {
    "**/.git": true,
    "**/*.log": true,
    "**/node_modules": true,
    "**/tmp": true,
    "**/wp-content/**/public": true
  },
  "[php]": {
    "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\"-,.<>/?"
  },
  "editor.suggest.insertMode": "replace",
  "editor.suggest.showStatusBar": true,

  "workbench.layoutControl.enabled": true,
  "workbench.startupEditor": "none",
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "editor.fontWeight": "300",

  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,

  "cSpell.diagnosticLevel": "Hint",
