    "intelephense.codeLens.implementations.enable": true,
    "intelephense.codeLens.usages.enable": true,
    "[scss]": {
        "editor.defaultFormatter": "sibiraj-s.vscode-scss-formatter"
    },
    "explorer.fileNesting.patterns": {
        "*.ts": "${capture}.js",
        "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
        "*.jsx": "${capture}.js",
        "*.tsx": "${capture}.ts",
        "tsconfig.json": "tsconfig.*.json",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
        "*.sqlite": "${capture}.${extname}-*",
        "*.db": "${capture}.${extname}-*",
        "*.sqlite3": "${capture}.${extname}-*",
        "*.db3": "${capture}.${extname}-*",
        "*.sdb": "${capture}.${extname}-*",
        "*.s3db": "${capture}.${extname}-*"
    },
    "gitblame.inlineMessageEnabled": true,
    "gitblame.inlineMessageFormat": "by ${author.name} (${time.ago})",
    "gitblame.currentUserAlias": "You",
    "gitblame.inlineMessageMargin": 1,
    "sqltools.useNodeRuntime": true,
    "[postcss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "windsurf.autocompleteSpeed": "fast",
    "laravel-pint.enable": true,
    "editor.wordWrapColumn": 180,
    "bladeFormatter.format.wrapLineLength": 180,
    "html.format.wrapLineLength": 180,
    "scssFormatter.printWidth": 180,
    "vue.inlayHints.missingProps": true,
    "prettier.printWidth": 180,
    "prettier.tabWidth": 4,
    "files.associations": {
        ".windsurfrules": "markdown"
    },
    "intelephense.codeLens.overrides.enable": true,
    "intelephense.codeLens.parent.enable": true,
    "intelephense.codeLens.references.enable": true,
    "editor.minimap.enabled": false,
    "windsurf.cascadeOpenOnReload": false,
    "workbench.productIconTheme": "fluent-icons",
    "redhat.telemetry.enabled": false,
    "catppuccin.italicKeywords": false,
    "search.useGlobalIgnoreFiles": true,
    "projectManager.vscode.ignoredFolders": [
        "node_modules",
        "out",
        "typings",
        "test",
        "public/css",
        "public/js",
        "public/vendor",
        "public/build"
    ],
    "workbench.activityBar.location": "hidden",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "workbench.colorTheme": "Catppuccin Macchiato"
}
