{
    "workbench.iconTheme": "catppuccin-macchiato",
    "editor.fontFamily": "MonoLisa Nerd Font Mono, JetBrains Mono, FiraCode Nerd Font, Cascadia Code, Inconsolata, DankMono Nerd Font Mono, Monaspace Argon Medium, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true, // "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'",
    "editor.fontSize": 12,
    "editor.lineHeight": 40,
    "codeium.enableCodeLens": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "explorer.openEditors.visible": 1,
    "workbench.tree.indent": 18,
    "php-docblocker.useShortNames": true,
    "php-docblocker.alignParams": true,
    "php-docblocker.alignReturn": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "window.openFilesInNewWindow": "on",
    "files.exclude": {
        "**/.idea": true
    },
    "files.autoSave": "onFocusChange",
    "files.autoSaveDelay": 300,
    "editor.rulers": [
        120
    ],
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "editor.cursorBlinking": "phase",
    "search.mode": "reuseEditor",
    "search.exclude": {
        "**/.git": true,
        "**/*.log": true,
        "**/node_modules": true,
        "**/tmp": true,
        "**/wp-content/**/public": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.suggest.showStatusBar": true,
    "intelephense.environment.phpVersion": "8.2.0",
    "security.workspace.trust.untrustedFiles": "open",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "cSpell.customDictionaries": {
        "custom-dictionary-user": {
            "name": "custom-dictionary-user",
            "path": "~/.cspell/custom-dictionary-user.txt",
            "addWords": true,
            "scope": "user"
        }
    },
    "#workbench.layoutControl.enabled": true,
    "workbench.startupEditor": "none",
    "php.suggest.basic": false,
    "php.validate.enable": false,
    "editor.fontWeight": "300",
    "workbench.fontAliasing": "auto",
    "editor.linkedEditing": true,
    "vsicons.dontShowNewVersionMessage": true,
    "php-cs-fixer.executablePath": "/usr/local/bin/php-cs-fixer",
    "terminal.integrated.env.osx": {},
    "intelephense.telemetry.enabled": false,
    "liveServer.settings.CustomBrowser": "chrome:PrivateMode",
    "console-ninja.featureSet": "Community",
    "editor.accessibilitySupport": "off",
    "symbols.hidesExplorerArrows": false,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "@TODO"
    ],
    "tailwind-raw-reorder.classRegex": {
        "jade": [
            {
                "regex": "\\.([\\._a-zA-Z0-9\\-]+)",
                "separator": "\\.",
                "replacement": "."
            },
            "\\bclass\\s*=\\s*[\\\"\\']([\\._a-zA-Z0-9\\s\\-\\:\\/]+)[\\\"\\']"
        ],
        "html": [
            [
                "\\sclass=(([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
                "[\"'`]([^]+)"
            ]
        ],
        "css": "\\B@apply\\s+([\\._a-zA-Z0-9\\s\\-\\:\\/]+);",
        "javascript": [
            [
                "((?:class(?:Name)?|tw)\\s*=\\s*([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>]\\2)",
                "(?:class(?:Name)?|tw)\\s*=\\s*(([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
                "[\"'`]([^]+)"
            ]
        ],
        "javascriptreact": [
            [
                "((?:class(?:Name)?|tw)\\s*=\\s*{?([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>]\\2)",
                "(?:class(?:Name)?|tw)\\s*=\\s*{?(([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
                "[\"'`]([^]+)"
            ]
        ],
        "typescript": [
            [
                "((?:class(?:Name)?|tw)\\s*=\\s*([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>]\\2)",
                "(?:class(?:Name)?|tw)\\s*=\\s*(([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
                "[\"'`]([^]+)"
            ]
        ],
        "typescriptreact": [
            [
                "((?:class(?:Name)?|tw)\\s*=\\s*{?([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>]\\2)",
                "(?:class(?:Name)?|tw)\\s*=\\s*{?(([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
                "[\"'`]([^]+)"
            ]
        ],
        "php": [
            [
                "\\sclass=(([\"'`])(?:(?:[^{}<>](?!\\2))|\\\\\\2)+[^{}<>])\\2",
                "[\"'`]([^]+)"
            ]
        ]
    },
    "emmet.preferences": {},
    "emmet.includeLanguages": {
        "postcss": "css",
        "blade": "html"
    },
    "editor.snippetSuggestions": "bottom",
    "workbench.editor.enablePreview": false,
    "gitlens.plusFeatures.enabled": false,
    "gitlens.codeLens.enabled": false,
    "cSpell.language": "en,hr-HR,hr",
    "tailwind-fold.autoFold": false,
    "tailwind-fold.supportedLanguages": [
        "html",
        "blade"
    ],
    "prettier.configPath": "public/.prettierrc",
    // formatters
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "svelte.ask-to-enable-ts-plugin": false,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "Vue.volar"
    },
    "[php]": {
        "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\"-,.<>/?",
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
    },
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.formatOnPaste": true,
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "git.autofetch": true,
    "editor.formatOnSave": true,
