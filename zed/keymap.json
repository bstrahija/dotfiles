[
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle",
      "alt-cmd-p": ["projects::OpenRecent", { "create_new_window": false }],
      "cmd-1": "workspace::ToggleRightDock",
      "cmd-2": "workspace::ToggleLeftDock",
      "cmd-3": "workspace::ToggleBottomDock",
      "cmd-r": "outline::Toggle"
    }
  },
  {
    "context": "Editor || ProjectPanel",
    "bindings": {
      // put key-bindings here if you want them to work only in normal mode
      // Window movement bindings
      // Ctrl jklk to move between panes
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-k": "workspace::ActivatePaneUp",
      "ctrl-j": "workspace::ActivatePaneDown"
    }
  },

  {
    "context": "vim_mode == insert && editor_has_snippet_completions",
    "bindings": {
      "tab": "editor::ShowWordCompletions"
    }
  },

  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
      "j j": "vim::NormalBefore",

      // AI suggestion
      "ctrl-x ctrl-o": "editor::ShowCompletions",
      "ctrl-x ctrl-a": "assistant::InlineAssist",
      "ctrl-x ctrl-c": "editor::ShowEditPrediction",

      // Move and select in insert mode
      "alt-h": "editor::MoveLeft",
      "alt-l": "editor::MoveRight",
      "alt-k": "editor::MoveUp",
      "alt-j": "editor::MoveDown",
      "alt-shift-h": "editor::SelectLeft",
      "alt-shift-l": "editor::SelectRight",
      "alt-shift-k": "editor::SelectUp",
      "alt-shift-j": "editor::SelectDown"
    }
  },

  // Manage files in the file tree
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": "project_panel::NewFile",
      "A": "project_panel::NewDirectory",
      "p": "project_panel::Paste",
      "x": "project_panel::Cut",
      "s": "project_panel::Open",
      "c": "project_panel::Copy",
      "r": "project_panel::Rename",
      "d": "project_panel::Trash",
      "space e": "project_panel::ToggleFocus",
      "cmd-e": "project_panel::ToggleFocus"
    }
  },

  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "tab": "pane::ActivateNextItem",
      "shift-tab": "pane::ActivatePreviousItem",
      "H": "pane::ActivatePreviousItem",
      "L": "pane::ActivateNextItem",
      "space /": "pane::DeploySearch",

      // Copy shortcut
      "shift-y": ["workspace::SendKeystrokes", "y $"],

      // Subword navigation (CamelCase)
      "w": "vim::NextSubwordStart",
      "b": "vim::PreviousSubwordStart",
      "e": "vim::NextSubwordEnd",
      "g e": "vim::PreviousSubwordEnd",

      // Panels
      "space space": "file_finder::Toggle",
      "space e": "project_panel::ToggleFocus",
      "cmd-e": "project_panel::ToggleFocus",
      "space t": "theme_selector::Toggle",
      "space x": "zed::Extensions",
      "space p": "command_palette::Toggle",
      "space f": "file_finder::Toggle",
      "space r": "outline::Toggle",
      "space o": "pane::CloseOtherItems",
      "spaec s": "pane::SplitRight",
      "space S": "pane::SplitDown",
      "space tab": "tab_switcher::Toggle",

      // Errors
      "space p e": "diagnostics::Deploy",

      // Git
      "space g": "git_panel::ToggleFocus",

      // Code actions
      "space c a": "editor::ToggleCodeActions",
      "space .": "editor::ToggleCodeActions",
      "space h": "editor::Hover",

      // Comments
      "g c": ["editor::ToggleComments", { "advance_downwards": false }],

      // Lines
      "shift-enter": "editor::NewlineBelow",
      "ctrl-shift-enter": "editor::NewlineAbove",

      // Navigate code
      "g d": "editor::GoToDefinition",
      "g D": "editor::GoToDefinitionSplit",
      "g i": "editor::GoToImplementation",
      "g I": "editor::GoToImplementationSplit",
      "g t": "editor::GoToTypeDefinition",
      "g T": "editor::GoToTypeDefinitionSplit",
      "g r": "editor::FindAllReferences"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual) && vim_operator == none && !VimWaiting",
    "bindings": {
      "space m p": "markdown::OpenPreview",
      "space m P": "markdown::OpenPreviewToTheSide"
    }
  },
  {
    "context": "(Editor && mode == full)",
    "bindings": {
      "cmd-e": "project_panel::ToggleFocus"
    }
  },

  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      "cmd-e": "project_panel::ToggleFocus",
      "space e": "project_panel::ToggleFocus",
      "space f": "file_finder::Toggle",
      "space p": "command_palette::Toggle",
      "space t": "theme_selector::Toggle",
      "space x": "zed::Extensions",
      "space space": "file_finder::Toggle",
      "shift-shift": "file_finder::Toggle"
    }
  }
]
