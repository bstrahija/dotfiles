[
  {
    "context": "Workspace",
    "bindings": {
      "shift shift": "file_finder::Toggle"
    }
  },

  {
    "context": "Workspace",
    "bindings": {
      "cmd-1": "workspace::ToggleRightDock"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "cmd-2": "workspace::ToggleLeftDock"
    }
  },

  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      "j k": "vim::NormalBefore",
      "j j": "vim::NormalBefore"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "a": "project_panel::NewFile"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "p": "project_panel::Paste"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "x": "project_panel::Cut"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "d": "project_panel::Delete"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "A": "project_panel::NewDirectory"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "s": "project_panel::Open"
    }
  },

  {
    "context": "ProjectPanel",
    "bindings": {
      "c": "project_panel::Copy"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "r": "project_panel::Rename"
    }
  },

  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "tab": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "shift-tab": "pane::ActivatePreviousItem"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "H": "pane::ActivatePreviousItem",
      "L": "pane::ActivateNextItem"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "space e": "project_panel::ToggleFocus"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space p": "command_palette::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space f": "file_finder::Toggle"
    }
  },
  {
    "context": "Editor && vim_mode == normal && vim_operator == none && !VimWaiting",
    "bindings": {
      "space r": "outline::Toggle"
    }
  },
  {
    "bindings": {
      "ctrl+h": "workspace::ActivatePaneRight",
      "ctrl+j": "workspace::ActivatePaneDown",
      "ctrl+k": "workspace::ActivatePaneUp",
      "ctrl+l": "workspace::ActivatePaneLeft"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "alt-cmd-p": [
        "projects::OpenRecent",
        {
          "create_new_window": false
        }
      ]
    }
  }
]
