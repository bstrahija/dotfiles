{
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "dock": "left"
  },
  "autosave": "on_focus_change",
  "base_keymap": "VSCode",
  "buffer_font_family": "MonaspiceKr Nerd Font",
  "buffer_font_size": 13,
  "buffer_line_height": { "custom": 2.6 },
  "cursor_blink": false,
  "context_servers": {
    "wordpress-mcp": {
      "source": "custom",
      "enabled": true,
      "command": "npx",
      "args": ["-y", "@automattic/mcp-wordpress-remote@latest"],
      "env": {
        "JWT_TOKEN": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJpc3MiOiJodHRwczovL3dvcmRwcmVzcy50ZXN0IiwiaWF0IjoxNzU1Nzg0OTQ3LCJleHAiOjE3NTU3ODg1NDcsInVzZXJfaWQiOjEsImp0aSI6ImIyTHBKTkFtejF3Y1VPeWlJMjROR01QQkV3cTQxNEtVIn0.upJGRXMy-vHv9O94sN3UVNvszdV_udcJDhzz9ASxAAk",
        "WP_API_URL": "https://wordpress.test/"
      }
    },
    "laravel-boost": {
      "source": "custom",
      "enabled": true,
      "command": "php",
      "args": ["artisan", "boost:mcp"],
      "env": {}
    },
    "mcp-server-context7": {
      "source": "extension",
      "enabled": true,
      "settings": {
        "default_minimum_tokens": "10000"
      }
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "file_scan_exclusions": ["_model_helpers.php"],
  "file_types": {
    "PHP": ["*.php", "_ide_helper.php"],
    "Blade": ["*.blade.php"]
  },
  "preview_tabs": {
    "enabled": false
  },
  "icon_theme": "Bearded Icon Theme",
  "indent_guides": {
    "enabled": true
  },
  "inlay_hints": {
    "enabled": false
  },
  // Uncomment below to use local AI with Ollama, refer https://zed.dev/docs/language-model-integration?highlight=ollama#using-ollama-on-macos
  // "assistant": {
  //   "default_model": {
  //     "provider": "ollama",
  //     "model": "llama3.1:latest"
  //   },
  //   "version": "2",
  //   "provider": null
  // },
  "language_models": {
    "ollama": {
      "api_url": "http://localhost:11434"
    }
  },
  "languages": {
    "PHP": {
      "language_servers": [
        "intelephense",
        "phpactor",
        "phptools",
        "phpdocs",
        "..."
      ],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "temp=$(mktemp) && cat > $temp && pint --quiet $temp && cat $temp"
          ]
        }
      },
      // "formatter": "language_server",
      // "formatter": {
      //   "code_actions": {
      //     "source.fixAll.phpactor.phpCsFixer": true
      //   }
      // },
      "prettier": {
        "allowed": true,
        "plugins": ["@prettier/plugin-php", "@prettier/plugin-blade"],
        "parser": "php"
      }
    }
  },
  "lsp": {
    "intelephense": {
      "initialization_options": {
        "licenceKey": "~/.config/intelephense/licence.txt"
      },
      "settings": {
        "environment": {
          "phpVersion": "8.4.0"
        }
      }
    },
    "phptools": {
      "initialization_options": {
        "0": "~/.config/phptools/license.json"
      }
    },
    "phpactor": {
      "initialization_options": {
        "language_server_completion.trim_leading_dollar": true
      }
    }
  },
  "project_panel": {
    "dock": "right",
    "default_width": 360
  },
  "relative_line_numbers": true,
  "show_whitespaces": "selection",
  "show_edit_predictions": false,
  "tabs": {
    "file_icons": false,
    "git_status": true
  },
  "tab_bar": {
    "show": true,
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "font_size": 13,
    "line_height": {
      "custom": 1.6
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Nord"
  },
  "toolbar": {
    "breadcrumbs": false,
    "selections_menu": false,
    "quick_actions": false
  },
  "ui_font_size": 15,
  "vim_mode": true,
  "vim": {},
  "wrap_guides": [90]
}
