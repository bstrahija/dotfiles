{
  // VIM
  "vim_mode": true,

  // Looks
  "icon_theme": "Bearded Icon Theme",
  "buffer_font_family": "MonaspiceKr Nerd Font",
  "buffer_font_size": 14,
  "ui_font_size": 16,
  "minimap": { "show": "never" },
  "buffer_font_features": { "calt": 0 },
  "buffer_line_height": { "custom": 2.6 },
  "relative_line_numbers": true,
  "theme": { "mode": "system", "light": "Tokyo Night Storm", "dark": "Tokyo Night Storm" },
  "show_whitespaces": "selection",
  "project_panel": { "dock": "right", "default_width": 360 },
  "terminal": { "font_size": 13, "line_height": { "custom": 1.6 } },

  // Other
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "base_keymap": "VSCode",
  "format_on_save": "on",
  "autosave": "on_focus_change",

  // Files, indexing, etc.
  "file_scan_exclusions": ["_model_helpers.php"],
  "file_types": {
      "PHP": ["*.php", "_ide_helper.php"],
      "Blade": ["*.blade.php"]
  },

  // Cleanup of UI
  "preview_tabs": {
      "enabled": false
  },
  "tabs": {
      "file_icons": false,
      "git_status": true
  },
  "tab_bar": {
      "show": true,
      "show_tab_bar_buttons": false,
      "show_nav_history_buttons": false
  },
  "toolbar": {
      "breadcrumbs": false,
      "selections_menu": false,
      "quick_actions": false
  },

  // Indentation and wrapping
  "tab_size": 4,
  "wrap_guides": [120],
  "indent_guides": {
      "enabled": true,
      "coloring": "fixed",
      "active_line_width": 2
  },

  // Languages settings
  "inlay_hints": {
      "enabled": false
  },

  "languages": {
      "PHP": {
          "language_servers": [
              "!intelephense",
              "!phpactor",
              "phptools",
              "phpdocs",
              "..."
          ],
          "format_on_save": "on",
          "formatter": {
              "external": {
                  "command": "bash",
                  "arguments": [
                      "-c",
                      "temp=$(mktemp) && cat > $temp && pint --quiet --config ~/.config/pint/laravel.json $temp && cat $temp"
                  ]
              }
          }
      },
      "Blade": {
          "format_on_save": "on",
          "formatter": {
              "external": {
                  "command": "npx",
                  "arguments": [
                      "prettier",
                      "--stdin-filepath",
                      "{buffer_path}",
                      "--plugin=/opt/homebrew/lib/node_modules/prettier-plugin-blade/plugin.js",
                      "--parser=blade"
                  ]
              }
          }
      }
  },

  // LSP settings
  "lsp": {
      "intelephense": {
          "initialization_options": {
              "licenceKey": "~/.config/intelephense/licence.txt"
          },
          "settings": {
              "environment": {
                  "phpVersion": "8.4.0"
              }
          }
      },
      "phptools": {
          "initialization_options": {
              "0": "~/.config/phptools/license.json"
          }
      }
  }
}
